{
  "name": "gitops-for-github",
  "version": "1.0.0",
  "private": true,
  "description": "GitOps for GitHub",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --minify",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mechiru/gitops-for-github.git"
  },
  "keywords": [
    "actions",
    "chatwork"
  ],
  "author": "mechiru",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@octokit/core": "^4.1.0",
    "@octokit/plugin-paginate-rest": "^5.0.1",
    "@octokit/plugin-throttling": "^4.3.2",
    "js-yaml": "^4.1.0",
    "jsonc-parser": "^3.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^16.18.11",
    "@typescript-eslint/parser": "^5.47.1",
    "@vercel/ncc": "^0.36.0",
    "eslint": "^8.30.0",
    "eslint-plugin-github": "^4.6.0",
    "eslint-plugin-jest": "^27.1.7",
    "jest": "^29.4.0",
    "jest-circus": "^29.3.1",
    "prettier": "2.8.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  }
}
